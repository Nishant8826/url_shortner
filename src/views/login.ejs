<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: background 0.5s ease, color 0.5s ease;
            position: relative;
            padding: 20px;
        }

        .theme-switcher {
            position: absolute;
            top: 20px;
            right: 20px;
            width: auto;
            z-index: 10;
        }

        body.gradient {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: #fff;
        }

        body.light {
            background: #f8f9fa;
            color: #212529;
        }

        body.dark {
            background: #121212;
            color: #f8f9fa;
        }

        .card {
            border-radius: 2rem;
            padding: 2rem;
            width: 100%;
            max-width: 500px;
            transition: background 0.5s ease, color 0.5s ease, transform 0.3s ease, box-shadow 0.3s ease;
            backdrop-filter: blur(10px);
        }

        body.light .card {
            background: #fff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        body.dark .card {
            background: #1e1e1e;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }

        body.gradient .card {
            background: rgba(255, 255, 255, 0.15);
            color: #fff;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        h2 {
            font-weight: 700;
        }

        input.form-control {
            border-radius: 50px;
            transition: box-shadow 0.3s ease, border 0.3s ease;
            margin-bottom: 1rem;
        }

        input.form-control:focus {
            box-shadow: 0 0 10px rgba(37, 117, 252, 0.5);
            border-color: #2575fc;
        }

        .btn-gradient {
            border-radius: 50px;
            padding: 0.6rem 2rem;
            font-weight: 600;
            background: linear-gradient(45deg, #2575fc, #6a11cb);
            color: #fff;
            border: none;
            transition: transform 0.2s ease, opacity 0.3s ease;
        }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        body.dark h2 {
            color: #fff;
        }
    </style>
</head>

<body class="gradient">
    <div class="theme-switcher">
        <select id="themeSelect" class="form-select">
            <option value="dark">Dark</option>
            <option value="gradient" selected>Gradient</option>
            <option value="light">Light</option>
        </select>
    </div>

    <div class="card text-center">
        <h2 class="mb-4">Login</h2>
        <form action="/login" method="POST">
            <input type="email" name="email" class="form-control" placeholder="Email" required>
            <input type="password" name="password" class="form-control" placeholder="Password" required>
            <button type="submit" class="btn btn-gradient w-100">Login</button>
        </form>
        <p class="mt-3">
            Don't have an account? <a href="/signup" class="text-decoration-none">Sign Up</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const themeSelect = document.getElementById("themeSelect");
        const body = document.body;

        themeSelect.addEventListener("change", (e) => {
            body.className = e.target.value;
            localStorage.setItem("theme", e.target.value);
        });

        window.onload = () => {
            const savedTheme = localStorage.getItem("theme") || "gradient";
            body.className = savedTheme;
            themeSelect.value = savedTheme;
        };
    </script>
</body>

</html>