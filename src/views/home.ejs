<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: background 0.5s ease, color 0.5s ease;
            position: relative;
            padding: 20px;
        }

        .theme-switcher {
            position: absolute;
            top: 20px;
            right: 20px;
            width: auto;
            z-index: 10;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        body.gradient {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: #fff;
        }

        body.light {
            background: #f8f9fa;
            color: #212529;
        }

        body.dark {
            background: #121212;
            color: #f8f9fa;
        }

        .card {
            border-radius: 2rem;
            padding: 2rem;
            width: 100%;
            max-width: 700px;
            transition: background 0.5s ease, color 0.5s ease, transform 0.3s ease, box-shadow 0.3s ease;
            backdrop-filter: blur(10px);
        }

        body.light .card {
            background: #fff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        body.dark .card {
            background: #1e1e1e;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);

        }

        body.gradient .card {
            background: rgba(255, 255, 255, 0.15);
            color: #000;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        h2 {
            font-weight: 700;
        }

        input.form-control {
            border-radius: 50px;
            transition: box-shadow 0.3s ease, border 0.3s ease;
        }

        input.form-control:focus {
            box-shadow: 0 0 10px rgba(37, 117, 252, 0.5);
            border-color: #2575fc;
        }

        .btn-gradient {
            border-radius: 50px;
            padding: 0.6rem 2rem;
            font-weight: 600;
            background: linear-gradient(45deg, #2575fc, #6a11cb);
            color: #fff;
            border: none;
            transition: transform 0.2s ease, opacity 0.3s ease;
        }

        .btn-gradient:hover {
            opacity: 0.9;
            transform: translateY(-2px);
        }

        .short-url {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: rgba(248, 249, 250, 0.8);
            padding: 0.5rem 1rem;
            border-radius: 1rem;
            margin-bottom: 0.5rem;
            transition: background 0.3s ease;
        }

        .short-url:hover {
            background: rgba(248, 249, 250, 1);
        }

        .copy-btn {
            background: transparent;
            border: none;
            cursor: pointer;
            color: #2575fc;
        }

        .copy-btn:hover {
            color: #6a11cb;
        }

        body.dark h2,
        body.dark h5 {
            color: #ffffff;
        }

        #profileBtn {
            border: 2px solid #000;
            color: #000;
            background-color: transparent;
            transition: border-color 0.3s, color 0.3s;
        }

        body.dark #profileBtn {
            border-color: #fff;
            color: #fff;
        }
    </style>
</head>

<body class="gradient">
    <div class="theme-switcher">
        <select id="themeSelect" class="form-select">
            <option value="dark">Dark</option>
            <option value="light">Light</option>
            <option value="gradient" selected>Gradient</option>
        </select>
        <button id="profileBtn" class="btn rounded-circle p-2 d-flex align-items-center justify-content-center"
            style="width: 40px; height: 35px;" title="Profile">
            <i class="bi bi-person"></i>
        </button>
    </div>

    <div class="card text-center">
        <h2 class="mb-4">URL Shortener</h2>
        <form action="/url/shorten" method="POST" class="d-flex mb-3">
            <input type="url" name="longUrl" class="form-control me-2" placeholder="Enter your long URL..." required>
            <button type="submit" class="btn btn-gradient">Shorten</button>
        </form>

        <div class="mt-3">
            <% if (urls && urls.length> 0) { %>
                <h5 class="mb-3">All Shortened URLs</h5>
                <div class="list-group">
                    <% urls.forEach(url=> { %>
                        <a href="/url/fetch/<%= url.shortId %>" target="_blank"
                            class="me-2 text-decoration-none text-xl">
                            <div class="short-url">
                                <span class="text-truncate" style="max-width:50%;">
                                    <%= url.longUrl %>
                                </span>
                                <div>
                                    <span class="badge bg-primary ms-2">Clicks: <%= url.clicks %></span>
                                </div>
                            </div>
                        </a>
                        <% }) %>
                </div>
                <% } else { %>
                    <p class="mt-3">No URLs found yet!</p>
                    <% } %>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const themeSelect = document.getElementById("themeSelect");
        const body = document.body;

        themeSelect.addEventListener("change", (e) => {
            body.className = e.target.value;
            localStorage.setItem("theme", e.target.value);
        });

        window.onload = () => {
            const savedTheme = localStorage.getItem("theme") || "gradient";
            body.className = savedTheme;
            themeSelect.value = savedTheme;
        };
    </script>
</body>

</html>